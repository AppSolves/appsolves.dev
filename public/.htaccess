# Security headers for Apache servers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always append X-Frame-Options DENY
    
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Strict referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; connect-src 'self' https://github-readme-stats.vercel.app/api https://raw.githubusercontent.com/tiangolo/tiangolo.com/refs/heads/master/docs/css/termynal.css https://raw.githubusercontent.com/tiangolo/tiangolo.com/refs/heads/master/docs/css/custom.css; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' fonts.googleapis.com https://raw.githubusercontent.com/tiangolo/tiangolo.com/refs/heads/master/docs/css/termynal.css https://raw.githubusercontent.com/tiangolo/tiangolo.com/refs/heads/master/docs/css/custom.css; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; frame-src 'self' https://github.com https://*.github.com;"
</IfModule>

# Block suspicious user agents
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block common scraping tools
    RewriteCond %{HTTP_USER_AGENT} ^.*(curl|wget|python|scrapy|selenium|phantom|headless).*$ [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Block empty user agent
    RewriteCond %{HTTP_USER_AGENT} ^$
    RewriteRule ^(.*)$ - [F,L]
    
    # Rate limiting (basic)
    RewriteCond %{REMOTE_ADDR} !^127\.0\.0\.1$
    RewriteCond %{ENV:REDIRECT_STATUS} ^$
    RewriteCond %{QUERY_STRING} ^$
    RewriteRule ^(.*)$ - [E=THROTTLE:1]
</IfModule>

# Prevent access to sensitive files
<FilesMatch "^(\.env|\.git|package\.json|vite\.config|tsconfig)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>